{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "es6", "dom"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": [
    "**/*.d.ts"
  ]
}
